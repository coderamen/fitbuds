<%= render partial: "layouts/dbsidebar" %>

<div class="dashbox-pend">
    <div class="container">
        <div class="row">
          <% @pendings.each do |pending| %>
            <%= link_to user_pending_path(current_user, pending) do %>
              <div class="col-sm-3" style="padding-left:8px; padding-right:8px; ">
                <div class="item well">
                  <div class="item-img">
                    <%= image_tag "img-seed/seed-img#{rand(1..15)}.jpg", width: "100%", style: "position: relative; bottom: 25%" %>
                  </div>
                  <div class="row">
                  <div class="col-sm-2" style="width: 65%; padding-right: 0px; padding-left: 15px;">
                    <div class="item-content" style="border-right: 1px solid #898989; width: 85%; margin-left: 15px;">
                      <p style="margin-top: 10px; font-size: 20px;"><%= pending.activity.name %></p>
                      <p style="padding-top: 7px;"><%= pending.city %></p>
                      <% if Match.where(user1_pending_id: pending.id).or(Match.where(user2_pending_id: pending.id)) == [] %>
                        <p style="padding-top: 4px; font-weight: bold;">No matches yet</p>
                      <% else %>
                        <p style="padding-top: 4px; font-weight: bold;">Has matches already</p>
                      <% end %>
                    </div>
                  </div>
                  <div class="col-sm-2" style="width: 35%; padding-left: 0;">
                    <div class="item-content" style="margin-left: 0; margin-top: 5px; margin-right: 10px;">
                      <p style="font-size: 30px; text-align: center; margin-bottom: 0;"><%= pending.datetime.localtime.strftime("%d") %></p>
                      <p style="text-align: center; padding-top: 5px;"><%= pending.datetime.localtime.strftime("%b %Y") %></p>
                      <p style="text-align: center; padding-top: 5px;"><%= pending.datetime.localtime.strftime("%I:%M %p") %></p>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
</div>


